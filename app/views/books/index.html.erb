<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book) %>
          <%= link_to "Edit", edit_book_path(book) %>
          <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <%= f.label :Title %></br>
  <%= f.text_field :title %></br>
  
  <%= f.label :Body %></br>
  <%= f.text_area :body %></br>
  
  <%= f.submit "Create Book" %>
  
<% end %>

